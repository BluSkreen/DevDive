<div class="container">
  <div class="main-body">
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <img
                src="../public//assets/profilePictures/user.png"
                alt="Profile Picture"
                class="rounded-circle"
                width="150"
              />
              <div class="mt-3">
                <h4>
                  <input
                    id="username"
                    class="form-control form-control-sm"
                    type="text"
                    placeholder="Display Name"
                    aria-label=".form-control-sm example"
                  />
                </h4>
                <p class="text-secondary mb-1">
                  <input
                    id="devType"
                    class="form-control form-control-sm"
                    type="text"
                    placeholder="Dev type"
                    aria-label=".form-control-sm example"
                  />
                </p>
                <p class="text-muted font-size-sm">
                  <input
                    id="location"
                    class="form-control form-control-sm"
                    type="text"
                    placeholder="Located in..."
                    aria-label=".form-control-sm example"
                  />
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="card mt-3">
          <ul class="list-group list-group-flush">
            <li
              class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
            >
              <h6 class="mb-0">Website</h6>
              <span class="text-secondary"><input
                  id="website"
                  class="form-control form-control-sm"
                  type="text"
                  placeholder="www.mywebsite.com"
                  aria-label=".form-control-sm example"
                /></span>
            </li>
            <li
              class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
            >
              <h6 class="mb-0">Github</h6>
              <span class="text-secondary"><input
                  id="github"
                  class="form-control form-control-sm"
                  type="text"
                  placeholder="github user name"
                  aria-label=".form-control-sm example"
                /></span>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Full Name</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <input
                  id="first_name"
                  class="form-control form-control-sm"
                  type="text"
                  placeholder="First Name"
                  aria-label=".form-control-sm example"
                /><input
                  id="last_name"
                  class="form-control form-control-sm"
                  type="text"
                  placeholder="Last Name"
                  aria-label=".form-control-sm example"
                />
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <input
                  id="email"
                  class="form-control form-control-sm"
                  type="text"
                  placeholder="bestdev@gmail.com"
                  aria-label=".form-control-sm example"
                />
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Phone</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <input
                  id="phone"
                  class="form-control form-control-sm"
                  type="text"
                  placeholder="777-777-7777"
                  aria-label=".form-control-sm example"
                />
              </div>
            </div>
            <hr />
            <h3 class="dark-color">About Me</h3>
            <h6 class="theme-color lead">
              <input
                id="intro"
                class="form-control form-control-sm"
                type="text"
                placeholder="A junior dev at ____"
                aria-label=".form-control-sm example"
              />
            </h6>
            <p>
              <input
                id="aboutMe"
                class="form-control form-control-sm"
                type="text"
                placeholder="More about yourself!"
                aria-label=".form-control-sm example"
              />
            </p>
            <hr />
            <div class="row">
              <div class="col-sm-12">
                <a
                  id="saveProfile"
                  class="btn btn-success"
                  target="__blank"
                  href="/profile/update"
                >Save</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="./js/updateProfile.js"></script>