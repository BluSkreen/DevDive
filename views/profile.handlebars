<div class="container my-5 py-5">
  <div class="main-body">
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <img
                src="/assets/user.png"
                alt="Profile Picture"
                class="rounded-circle"
                width="150"
              />
              <div class="mt-3">
                <h4>{{user.username}}</h4>
                <p class="text-secondary mb-1">{{user.role}}</p>
                <p class="text-muted font-size-sm">{{user.location}}</p>
              </div>
            </div>
          </div>
        </div>
        <div class="card mt-3">
          <ul class="list-group list-group-flush">
            <li
              class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
            >
              <h6 class="mb-0">Website</h6>
              <span class="text-secondary">{{user.website}}</span>
            </li>
            <li
              class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
            >
              <h6 class="mb-0">Github</h6>
              <span class="text-secondary">{{user.github}}</span>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Full Name</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                {{user.first_name}}
                {{user.last_name}}
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary">{{user.email}}</div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Phone</h6>
              </div>
              <div class="col-sm-9 text-secondary">{{user.phone}}</div>
            </div>
            <hr />
            <h3 class="dark-color">About Me</h3>
            <h6 class="theme-color lead">{{user.intro}}</h6>
            <p>{{user.aboutMe}}</p>
            <hr />
            {{#if match}}
              <div class="row">
                <div class="col-sm-12">
                  <a
                    class="btn btn-secondary"
                    target="__blank"
                    href="/updateProfile"
                  >Edit</a>
                </div>
              </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script
  src="./js/profile.js
"
></script>